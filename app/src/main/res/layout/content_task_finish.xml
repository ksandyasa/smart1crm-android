<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/silver_bg">

    <RelativeLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_nav_bar">

        <com.sales1crm.ekamant.sales1crm.activities.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/task.finish"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:customFont="OpenSans-Regular.ttf"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llHeader"
        android:orientation="vertical"
        android:padding="@dimen/space.16"
        android:weightSum="1">

        <com.sales1crm.ekamant.sales1crm.activities.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/title.task.finish"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font.34"/>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space.40"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/space.40"
            android:paddingRight="@dimen/space.40"
            android:text="@string/btn.home"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>